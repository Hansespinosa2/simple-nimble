<div id="<%= dom_id spell %>" class="flex flex-col items-center w-100 gap-1 border-1 p-2">
  
  <p class="text-3xl text-center"><%= spell.name %>  </p>
  <p class="text-xs"><%= spell.school.upcase %></p>
  <div class="flex flex-wrap gap-5 items-between ">
    <p>Tier: <%= name_of_tier spell.tier %></p>
    <p>Action Cost: <%= name_of_action_cost spell.action_cost %></p>
    <p>Range: <%= name_of_range spell.range %></p>
    <p>Damage: <%= spell.damage %></p>
    <p><%= name_of_casting_time spell.casting_time %></p>
  </div>
  <p><%= spell.description %></p>
  <p><%= spell.high_level %></p>
  <p><%= spell.upcast %></p>


</div>
