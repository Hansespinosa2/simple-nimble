<%= form_with(model: stat, class: "contents") do |form| %>
  <div class="flex flex-col justify-center items-center">
    <%= form.number_field  :value, placeholder: 0, class:["border-b-1 min-w-10 text-center text-4xl", {"border-gray-400 focus:outline-blue-600": stat.errors[:name].none?, "border-red-400 focus:outline-red-600": stat.errors[:name].any?}] %>
    <label><%= stat.name %></label>
  </div>
<% end %>