<%= form_with(model: character, class: "contents") do |form| %>
  <% if character.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(character.errors.count, "error") %> prohibited this character from being saved:</h2>

      <ul class="list-disc ml-6">
        <% character.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <div class="flex flex-col gap-2 my-5">
    <div id="character-summary" class="flex gap-5 border-1 p-2">
      <div class="min-w-50">
        <div class="border-b-1">
          <%= form.text_field :name, placeholder: "Enter Name", class: ["w-full", {"border-gray-400 focus:outline-blue-600": character.errors[:name].none?, "border-red-400 focus:outline-red-600": character.errors[:name].any?}] %>
        </div>
        <p class="text-gray-500 text-xs">Name</p>
      </div>
      <div class="min-w-50">
        <div class="border-b-1">
          <%= form.text_field :race, placeholder: "Enter Race", class: ["w-full", {"border-gray-400 focus:outline-blue-600": character.errors[:race].none?, "border-red-400 focus:outline-red-600": character.errors[:race].any?}] %>
        </div>
        <p class="text-gray-500 text-xs">Race</p>
      </div>
      <div class="min-w-25">
        <div class="border-b-1">
          <%= form.text_field :nimble_class, placeholder: "Enter Class", class: ["w-full", {"border-gray-400 focus:outline-blue-600": character.errors[:nimble_class].none?, "border-red-400 focus:outline-red-600": character.errors[:nimble_class].any?}] %>
        </div>
        <p class="text-gray-500 text-xs">Class</p>
      </div>
      <div class="min-w-10">
        <div class="border-b-1">
          <%= form.number_field :level, placeholder: "Enter Level", class: ["w-full", {"border-gray-400 focus:outline-blue-600": character.errors[:level].none?, "border-red-400 focus:outline-red-600": character.errors[:level].any?}] %>
        </div>
        <p class="text-gray-500 text-xs">Level</p>
      </div>
      <div class="min-w-75">
        <div class="border-b-1">
          <%= form.text_field :background, placeholder: "Enter Background", class: ["w-full", {"border-gray-400 focus:outline-blue-600": character.errors[:background].none?, "border-red-400 focus:outline-red-600": character.errors[:background].any?}] %>
        </div>
        <p class="text-gray-500 text-xs">Background</p>
      </div>
    </div>
    <div id="character-info" class="border-1 p-2">
      <div class="">
        <div class="border-b-1">
          <%= form.textarea :description, rows: 4, placeholder: "Enter Description", class: ["w-full", {"border-gray-400 focus:outline-blue-600": character.errors[:description].none?, "border-red-400 focus:outline-red-600": character.errors[:description].any?}] %>
        </div>
        <p class="text-gray-500 text-xs">Description</p>
      </div>
      <div class="">
        <div class="border-b-1">
          <%= form.text_field :languages, placeholder: "Enter Languages", class: [" w-full", {"border-gray-400 focus:outline-blue-600": character.errors[:languages].none?, "border-red-400 focus:outline-red-600": character.errors[:languages].any?}] %>
        </div>
        <p class="text-gray-500 text-xs">Languages</p>
      </div>
    </div>
    <div id="character-stats" class="flex flex-col justify-center items-center gap-5 border-1 p-2"">
      <div class="flex gap-20">
        <%= form.fields_for :stats do |stat_fields| %>
          <div class="flex flex-col justify-center items-center border-4">
            <%= stat_fields.number_field :value, class: ["border-b-1 max-w-10 text-center text-4xl"] %>
            <%= stat_fields.text_field :name, class: ["text-gray-500 text-xs"] %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>