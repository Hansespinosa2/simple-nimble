<%= form_with(model: character, local: true, class: "p-2 w-full") do |form| %>
  <% if character.errors.any? %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">
      <h2 class="font-semibold mb-2">
        <%= pluralize(character.errors.count, "error") %> prohibited this character from being saved:
      </h2>
      <ul class="list-disc list-inside text-sm">
        <% character.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mx-auto max-w-[600px] flex flex-col gap-1 sm:gap-2 sm:pt-1">
    <%# Form Fields %>
    <div class="flex flex-row items-center border-b border-primary/50">
      <%= form.label :name, class: "uppercase font-sans font-[400] text-primary tracking-tighter leading-none px-2 pt-0.5 whitespace-nowrap h-full" %>
      <%= form.text_field :name, class: "outline-hidden px-2 p-1 w-full appearance-none bg-transparent font-input text-input dark:text-input-dark text-lg hover:bg-primary/5 dark:hover:bg-primary/15 focus:bg-primary/5 dark:focus:bg-primary/15 transition-all" %>
    </div>

    <div class="flex flex-row items-center border-b border-primary/50">
      <%= form.label :race, class: "uppercase font-sans font-[400] text-primary tracking-tighter leading-none px-2 pt-0.5 whitespace-nowrap h-full" %>
      <%= form.text_field :race, class: "outline-hidden px-2 p-1 w-full appearance-none bg-transparent font-input text-input dark:text-input-dark text-lg hover:bg-primary/5 dark:hover:bg-primary/15 focus:bg-primary/5 dark:focus:bg-primary/15 transition-all" %>
    </div>

    <div class="flex flex-row items-center border-b border-primary/50">
      <%= form.label :level, class: "uppercase font-sans font-[400] text-primary tracking-tighter leading-none px-2 pt-0.5 whitespace-nowrap h-full" %>
      <%= form.number_field :level, class: "outline-hidden px-2 p-1 w-full appearance-none bg-transparent font-input text-input dark:text-input-dark text-lg hover:bg-primary/5 dark:hover:bg-primary/15 focus:bg-primary/5 dark:focus:bg-primary/15 transition-all" %>
    </div>

    <div class="flex flex-row items-center border-b border-primary/50">
      <%= form.label :background, class: "uppercase font-sans font-[400] text-primary tracking-tighter leading-none px-2 pt-0.5 whitespace-nowrap h-full" %>
      <%= form.text_area :background, rows: 3, class: "outline-hidden px-2 p-1 w-full appearance-none bg-transparent font-input text-input dark:text-input-dark text-lg hover:bg-primary/5 dark:hover:bg-primary/15 focus:bg-primary/5 dark:focus:bg-primary/15 transition-all" %>
    </div>

    <div class="flex flex-row items-center border-b border-primary/50">
      <%= form.label :description, class: "uppercase font-sans font-[400] text-primary tracking-tighter leading-none px-2 pt-0.5 whitespace-nowrap h-full" %>
      <%= form.text_area :description, rows: 3, class: "outline-hidden px-2 p-1 w-full appearance-none bg-transparent font-input text-input dark:text-input-dark text-lg hover:bg-primary/5 dark:hover:bg-primary/15 focus:bg-primary/5 dark:focus:bg-primary/15 transition-all" %>
    </div>

    <div class="flex flex-row items-center border-b border-primary/50">
      <%= form.label :languages, class: "uppercase font-sans font-[400] text-primary tracking-tighter leading-none px-2 pt-0.5 whitespace-nowrap h-full" %>
      <%= form.text_field :languages, class: "outline-hidden px-2 p-1 w-full appearance-none bg-transparent font-input text-input dark:text-input-dark text-lg hover:bg-primary/5 dark:hover:bg-primary/15 focus:bg-primary/5 dark:focus:bg-primary/15 transition-all" %>
    </div>

    <div class="flex flex-row items-center border-b border-primary/50">
      <%= form.label :proficiencies, class: "uppercase font-sans font-[400] text-primary tracking-tighter leading-none px-2 pt-0.5 whitespace-nowrap h-full" %>
      <%= form.text_field :proficiencies, class: "outline-hidden px-2 p-1 w-full appearance-none bg-transparent font-input text-input dark:text-input-dark text-lg hover:bg-primary/5 dark:hover:bg-primary/15 focus:bg-primary/5 dark:focus:bg-primary/15 transition-all" %>
    </div>

    <div>
      <%= form.submit "Save Character", class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    </div>
  </div>
  
<% end %>
